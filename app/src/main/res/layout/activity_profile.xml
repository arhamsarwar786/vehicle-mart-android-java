<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_person_id"
        android:src="@drawable/ic_baseline_person_pin_24"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arham Server"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/app_color"
        android:id="@+id/tv_name"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNIC:"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/app_color"
            android:fontFamily="@font/poppins_regular"
            android:textSize="15dp"
            android:id="@+id/tv_cnic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35202-6543213-9"
            android:padding="10dp"
            android:layout_marginLeft="115dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/tv_cnic_num"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number:"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/app_color"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/tv_contact"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+923008071676"
            android:padding="10dp"
            android:layout_marginLeft="28dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/tv_contact_num"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/app_color"
            android:textSize="15dp"
            android:id="@+id/tv_email"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc@gmail.com"
            android:padding="10dp"
            android:layout_marginLeft="105dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_regular"
            android:id="@+id/tv_email_id"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="263dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_catogery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"
            android:text="Catogery:"
            android:textColor="@color/app_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_user_catogery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="10dp"
            android:text="Seller"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_main" />

</LinearLayout>